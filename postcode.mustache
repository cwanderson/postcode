<script type="text/html" id="address-list">
  <div class="container">
    <div id="addresses" class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">Addresses</h2>
      </div>
      <div class="panel-body">
        {{#Addresses.length}}
          <table class="table table-striped table-condensed">
            <thead>
              <tr>
                <th>Address</th>
              </tr>
            </thead>
            <tbody>
              {{#Addresses}}
                <tr>
                  <td>{{.}}</td>
                </tr>
              {{/Addresses}}                          
            </tbody>
          </table>
        {{/Addresses.length}}a
        {{^Addresses.length}}
          No addresses found.
        {{/Addresses.length}}
      </div>
    </div>
  </div>
</script>
